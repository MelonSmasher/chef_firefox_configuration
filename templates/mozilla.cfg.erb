// mozilla.cfg Generated by Chef for <%= node['hostname'] %> do not edit!

// prefs
<% node['firefox_configuration']['prefs'].each do |option, value| -%>
    <% if value.is_a? String %>
pref("<%= option %>", "<%= value %>");
    <% else %>
        <% case value %>
        <% when TrueClass, FalseClass %>
pref("<%= option %>", <%= value ? 'true' : 'false' %>);
        <% else %>
pref("<%= option %>", <%= value %>);
        <% end %>
    <% end %>
<% end -%>

// default_prefs
<% node['firefox_configuration']['default_prefs'].each do |option, value| -%>
    <% if value.is_a? String %>
defaultPref("<%= option %>", "<%= value %>");
    <% else %>
        <% case value %>
        <% when TrueClass, FalseClass %>
defaultPref("<%= option %>", <%= value ? 'true' : 'false' %>);
        <% else %>
defaultPref("<%= option %>", <%= value %>);
        <% end %>
    <% end %>
<% end -%>

// lock_prefs
<% node['firefox_configuration']['lock_prefs'].each do |option, value| -%>
